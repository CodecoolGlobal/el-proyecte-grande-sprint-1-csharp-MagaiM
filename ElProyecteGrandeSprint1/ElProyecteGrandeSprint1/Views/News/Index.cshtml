@{
    ViewData["Title"] = "News Page";
}

<div class="container">
    <div class="recent-news">
        @foreach (var element in Model)
        {
            <div class="col-lg-3 col-lg-3" style="display: inline-block; height: 350px; width: 90%">
                <div class="card">
                    <img class="product-image" src="@(element.Image)">
                    <div class="card-body inner-card">
                        <a href="@element.Link"><h5 class="card-title text-center">@element.Title</h5></a>
                        <p class="card-text">@element.Description.</p>
                        <p class="card-text">@element.Date</p>
                    </div>
                </div>
                <br/>
            </div>
        }
    </div>
</div>